<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DataFragment">

    <TextView
        android:id="@+id/tvAwardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="MejaKita Award"
        android:textSize="30sp"
        android:fontFamily="@font/ofbold"
        android:textColor="@color/black"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="50dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="48dp"
        app:cardCornerRadius="24dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <Button
                android:id="@+id/button"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:background="@drawable/button"
                android:fontFamily="@font/ofsemibold"
                android:hint="Si Rajin"
                android:textColorHint="@color/white"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ofsemibold"
                android:text="Atta"
                android:textColor="@color/main"
                android:textSize="26sp"
                app:layout_constraintTop_toBottomOf="@+id/button"
                app:layout_constraintBottom_toTopOf="@id/tv_desc1"
                tools:layout_editor_absoluteX="12dp" />

            <TextView
                android:id="@+id/tv_desc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Melakukan finger sebanyak 37 kali"
                android:textSize="14sp"
                android:fontFamily="@font/ofregular"
                android:textColor="@color/main"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/resultTextView"
                tools:layout_editor_absoluteX="12dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="24dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <Button
                android:id="@+id/button2"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:background="@drawable/button"
                android:fontFamily="@font/ofsemibold"
                android:hint="Hari ini"
                android:textColorHint="@color/white"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/resultTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ofsemibold"
                android:text="Atta"
                android:textColor="@color/main"
                android:textSize="26sp"
                app:layout_constraintTop_toBottomOf="@+id/button2"
                tools:layout_editor_absoluteX="12dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>